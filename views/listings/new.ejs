<% layout("./layouts/boilerplate") %>
  <div class="row">
  <div class="col-8 offset-2" >
      <h3>Create a new Listing</h3>
        <form class="needs-validation" method="POST" action="/listings" novalidate enctype="multipart/form-data">
            <br>
          <div class="mb-3">
            <label for="title" class="form-label">Enter title</label>
            <input name="listing[title]" class="form-control" required/>
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Please fill the title!</div>
          </div>

          
          <div class="mb-3">
            <label class="form-label" for="description">Enter description</label>
            <textarea
              name="listing[description]"
              id="" 
              class="form-control"
              required
            ></textarea>
            <div class="valid-feedback">Description looks good!</div>
            <div class="invalid-feedback">Please fill the description!</div>
          </div>
    
      
          
          <div class="mb-3">
            <label class="form-label" for="image">Upload image</label>
            <input name="listing[image]" class="form-control" type="file"/>
          </div>
          

          <div class="row">
            <div class="mb-2 col-md-4" >
                <label class="form-label" for="price">Enter price</label>
                <input name="listing[price]" class="form-control"  required type="number"/>
                <div class="valid-feedback">Perfect</div>
            <div class="invalid-feedback">Please fill the Price!</div>
              </div>
              
              <div class="mb-3 col-md-8">
                <label class="form-label" for="country">Enter country</label>
                <input name="listing[country]" class="form-control" required/>
                <div class="valid-feedback">looks good!</div>
            <div class="invalid-feedback">Please enter the country name!</div>
              </div>
          </div>
    
          <div class="mb-3">
            <label class="form-label" for="location">Enter location</label>
            <input name="listing[location]" class="form-control" required />
            <div class="valid-feedback">Location looks good!</div>
            <div class="invalid-feedback">Please fill the Location!</div>
          </div>
        
    
          <button class="btn btn-dark add-btn">Add</button>
          <br>
          <br>
        </form>
    
  </div>
    
  </div>