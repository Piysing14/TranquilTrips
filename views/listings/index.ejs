<% layout("./layouts/boilerplate") %>
<style>
 #filters{
  display: flex;
  flex-wrap: wrap;
 }
 .filter{
  text-align: center;
  margin-right: 3.7rem;
  margin-top: 2rem;
  opacity: 0.7;
 }
 
 .filter:hover{
 
  opacity: 1;
  cursor: pointer;
 }

</style>
    <h1 >Welcome to TranquilTrips</h1>
    <div id="filters">
      <div class="filter">
       <div> <i class="fa-solid fa-fire-flame-curved"></i></div> Trending
      </div>
      <div class="filter">
        <div> <i class="fa-solid fa-bed"></i></div> Rooms
       </div>
       <div class="filter">
        <div> <i class="fa-solid fa-mountain"></i></div> Mountains
       </div>
       <div class="filter">
        <div> <i class="fa-solid fa-utensils"></i></div>  food
       </div>
       <div class="filter">
        <div><i class="fa-solid fa-water"></i></div> Lakes
       </div>
       <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div> Snowfall
       </div>
       <div class="filter">
        <div><i class="fa-solid fa-person-hiking"></i></div> Trekking
       </div>
       <div class="filter">
        <div><i class="fa-solid fa-cable-car"></i></div> Trolley
       </div>
       <div class="filter">
        <div><i class="fa-solid fa-house-signal"></i></div> Wifi
       </div>
       <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div> Farms
       </div>
       <div class="filter">
        <div><i class="fa-solid fa-tree"></i></div> Forest
       </div>
      
    </div>

    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 mt-3"> 
        <!-- above 3,2,1 -->
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing.id %>" class="listing-link">
        <div class="card listing-card" >
            <img src="<%= listing.image.url %>" class="card-img-top" alt="..." style="height: 20rem;">
            <div class="card-img-overlay"><%= listing.description %></div>

            <div class="card-body">
             <b> <p class="card-text"><%= listing.title %></p></b>
              <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN")  %>/night</p>
              <!-- .toLocaleString("en-IN") -->
    
            </div>
          </div>
          <%} %>
        </a>
    </div>
    
    




 
